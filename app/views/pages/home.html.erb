<div class="row">
  <% if !current_user %>
    <div class="col s12 m6 center">
      <div class="homepage homepage-me">
        <%= link_to "I NEED HELP", new_user_registration_path(role: "patient"), class: "btn red base btn-large" %>
      </div>
    </div>
    <div class="col s12 m6 center">
      <div class="homepage homepage-me">
        <%= link_to "Iâ€™M A DOCTOR", new_user_registration_path(role: "doctor"), class: "btn black base btn-large" %>
      </div>
    </div>
  <% elsif current_user && current_user.role = "doctor" %>
    <div class="col s12 m12 center">
      <%= link_to "Create request", users_path, class: "btn red base btn-large" %>
      <%= link_to "My requests", doctor_dashboard_path(current_user), class: "btn red base btn-large" %>
