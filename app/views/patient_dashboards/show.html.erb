<div class="row">
  <div class="col s12 m6">
    <h3>Your pending requests</h3>
    <table class="highlight">
      <thead>
        <tr>
          <th data-field="doctor">Doctor</th>
          <th data-field="description">your message</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @requests_patient.each do |request| %>
          <tr>
            <th><p><%= request.doctor.first_name %></p></th>
            <th><p><%= request.description %></p></th>
            <th>created <%= time_ago_in_words(request.created_at) %> ago</th>
            <th><%= link_to user_request_path(current_user, request), method: :delete do %><i class="material-icons">delete</i><% end %> </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col s12 m6">
    <h3 class="center">Ongoing chat sessions</h3>
    <ul class="collection">
      <% @chat_sessions.each do |session| %>
      <%= link_to doctor_dashboard_chat_session_path(session), class: "chat_session" do %>
        <li class="collection-item avatar">
          <img src="images/yuna.jpg" alt="" class="circle">
          <span class="title"><u>with doctor: <%= session.doctor.first_name %></u></span>
          <p>started <%= time_ago_in_words(session.created_at) %> ago<br>
          </p>
          <i class="material-icons">textsms</i>
        </li>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>
