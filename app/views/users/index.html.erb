<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= link_to "#{doctor.username}", user_path(doctor) %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.address %></td>
        <td><%= link_to "Create request", new_user_request_path(doctor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
