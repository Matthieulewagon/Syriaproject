<div class="container">
<p></p><p></p>
      <div class="row">
        <div class="col s6 m6">
          <div class="card">
            <div class="card-image"><%= cl_image_tag(@user.photo,
      width: 400, height: 300, crop: :thumb, gravity: :face) %>


              <span class="card-title"><%= @user.first_name %> <%= @user.last_name %></span>
            </div>


          </div>
        </div>
      </div>

<h2>About <%= @user.username %></h2>
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons">account_circle</i> <p>First Name: <%= @user.first_name %></p>
        </div>
        <div class="input-field col s6">
          <i class="material-icons">account_circle</i><p>Last Name : <%= @user.last_name %></p>
        </div>
      </div>
    </form>
  </div>


  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons">location_on</i> <p>Address : <%= @user.address %></p>
        </div>
        <div class="input-field col s6">
          <i class="material-icons">phone</i><p>phone number : <%= @user.phone_number %></p>
        </div>
      </div>
    </form>
  </div>


  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons">videocam</i><p>skype_username : <%= @user.skype_username %></p>
        </div>
        <div class="input-field col s6">
          <i class="material-icons">label</i><p>Doctor/patient : <%= @user.role %></p>
        </div>
      </div>
    </form>
  </div>


  <div class="row">
    <form class="col s12">
      <div class="row">
        <i class="material-icons prefix">email </i><p>Email : <%= @user.email %></p>
      </div>
    </form>
  </div>
  <div class="row">
    <form class="col s12">
      <div class="row">
        <i class="material-icons prefix">email </i><p>speciality : <%= @user.specialisation %></p>

      </div>
  <% if current_user.role == "doctor" %>
   <a href="<%=cloudinary_url(@user.document) %>">doc</a>
  <% end %>
    </form>
  </div>

</div>
